
<img src="assets/images/burger.jpeg" height="200px" width="200px" id="image">

<h1>Eat Da Burgers!</h1>

<h2>Create a burger!</h2>

<div class="container">
  <div class="col-md-6">
    <h3>Burgers You Need To Try!</h3>
      <ol>
        {{#each burgers}}
          {{#unless eaten}}
          <li>
              {{burger_name}}

              <button class="eat" data-id="{{id}}" data-newsleep="{{sleep}}">
                Devour It!
              </button>
          </li>
          {{/unless}}
        {{/each}}
      </ol>
  </div>

  <div class="col-md-6">
    <h3>Consumed Burgers!!</h3>
    <ol>
        {{#each burgers}}
          {{#if eaten}}
          <li>
              {{burger_name}}

              <button class="delete" data-id="{{id}}" data-newsleep="{{sleep}}">
                Delete It.
              </button>
          </li>
          {{/if}}
        {{/each}}
      </ol>
  </div>

</div>

